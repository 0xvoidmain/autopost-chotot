{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Click to start",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources" : ["contentScript.js"],
  "manifest_version": 2
}